<!doctype html>
<html lang="en">

	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Bootstrap demo</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	</head>

	<body>
		<main>
			{# début du carrousel #}
			<div id="carouselExample" class="object-fit-contain border rounded col-5 carousel slide">
				<div class="carousel-inner">
					{% for item in films %}
						<div class="carousel-item {% if loop.first %} active {% endif %}">
							<h1>
								{{ loop.index }}
								-
								{{ item.titre }}
							</h1>
							<img src="{{ item.affiche }}" class="d-block w-100" alt="...">
							<h6>
								Réalisé en
								{{ item.annee }}
								par
								{{ item.realisateur }}
								avec :
								{% for acteur in item.acteurs %}
									{{ acteur.nom }}
									{{ acteur.prenom }}
									{% if not loop.last %},
									{% endif %}
								{% endfor %}
							</h6>
						</div>
					{% endfor %}
				</body>
			</html>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</body>
</html></div>{# fin du carrousel #}</body></body></html></body></html></main></body></html><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
